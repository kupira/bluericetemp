<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.10"/>

  <object class="GtkWindow" id="main_window">
    <property name="title">Bluetooth Devices</property>
    <property name="default-width">400</property>
    <property name="default-height">300</property>

    <style>
      <class name="main-window"/>
    </style>

    <child>
      <object class="GtkBox" id="main_container">
        <property name="orientation">vertical</property>
        <property name="spacing">6</property>

        <style>
          <class name="main-container"/>
        </style>

        <!-- Refresh button -->
        <child>
          <object class="GtkButton" id="refresh_button">
            <property name="label">Refresh Devices</property>

            <style>
              <class name="refresh-button"/>
            </style>
          </object>
        </child>

        <!-- Scrollable list -->
        <child>
          <object class="GtkScrolledWindow" id="device_scroller">
            <property name="vexpand">True</property>
            <property name="hexpand">True</property>
            <property name="hscrollbar-policy">never</property>
            <property name="vscrollbar-policy">automatic</property>

            <style>
              <class name="device-scroller"/>
            </style>

            <child>
              <object class="GtkListBox" id="device_list">
                <style>
                  <class name="device-list"/>
                </style>
              </object>
            </child>

          </object>
        </child>

      </object>
    </child>
  </object>
</interface>

